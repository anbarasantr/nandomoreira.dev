@import '../../stylus/index.styl'

.About
  .SocialIcons
    text-align center
    padding 15px 0
    &:after
      content ''
      display block
      width 2.5rem
      height .25rem
      box-shadow inset 0 -12px 0 rgba($link-hover-color, .15)
      margin 1.25rem auto 0
  .gatsby-image-wrapper
    border-radius .625rem
    border 0 solid rgba(#000, .125)
    box-shadow 0 0 1px 0 rgba($primary-color, .08), 0 4px 14px rgba($primary-color, .06)
    max-width 300px
    margin 0 auto
