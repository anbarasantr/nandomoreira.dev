.clearfix
  &:after
    content ""
    display table
    clear both

.button
  display inline-block
  position relative
  font-size 1rem /* 16/16 */
  text-align center
  text-decoration none
  cursor pointer
  vertical-align bottom
  appearance none
  text-rendering auto
  user-select none
  box-sizing border-box
  font-family $font-family-base
  transition color .12s $timingFunction,
    background-color .12s $timingFunction
  padding .625rem /* 10/16 */ 1.875rem /* 30/16 */
  letter-spacing 0
  font-weight 700
  border-radius 1.6875rem /* 27/16 */
  border .125rem /* 2/16 */ solid transparent
  text-transform uppercase
  font-style normal
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -moz-font-feature-settings "liga" on
  svg
    fill inherit
  &:hover,
  &:focus,
  &:active
    outline none

.button--primary
  color $primary-color
  background-color transparent
  border-color $primary-color
  svg
    fill $primary-color
  &:hover,
  &:focus
    color #fff
    background $primary-color
    border-color $primary-color
    svg
      fill #fff

.button--secondary
  color #fff
  background-color $secondary-color
  border-color $secondary-color
  svg
    fill #fff
  &:hover,
  &:focus
    color $secondary-color
    background transparent
    border-color lighten($secondary-color, 10%)
    svg
      fill $secondary-color

.button--disabled
  cursor not-allowed
  color rgba($secondary-color, .4)
  border-color rgba($secondary-color, .2)
  svg
    fill rgba($secondary-color, .4)
  &:hover,
  &:focus
    color rgba($secondary-color, .6)
    border-color rgba($secondary-color, .4)
    svg
      fill rgba($secondary-color, .6)

.card
  width 100%
  background-color #fff
  position relative
  display block
  border-radius .625rem
  border 0 solid rgba(#000, .125)
  // box-shadow 0 0 .0625rem 0 rgba($primary-color, .08),
  //   0 .25rem .875rem rgba($primary-color, .06)
  box-shadow 0 0 1.25rem rgba($secondary-color, .1)
  @extend .clearfix

.card--hover
  transition all .2s $timingFunction
  &:hover,
  &:focus
    box-shadow 0 0 0 .25rem $primary-color
    transform translate3d(0, -0.3125rem, 0)
