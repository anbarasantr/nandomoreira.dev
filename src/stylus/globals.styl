.clearfix
  &:after
    content ""
    display table
    clear both

.button
  border 2px solid $secondary-color
  background $secondary-color
  font-size 1rem
  border-radius .25em
  padding 1rem 1.25rem
  color #fff
  font-weight 800
  cursor pointer
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  appearance none
  transition background-color .2s $timing-function,
    border-color .2s $timing-function

  &:disabled,
  &[disabled]
    cursor not-allowed
    opacity 0.65
    color #666666
    border-color #c0c0c0
    background-color #ccc

  svg
    fill inherit

  svg, span
    display inline-block
    margin 0 .25rem

  &:hover,
  &:focus,
  &:active
    outline none
    box-shadow none

.button--primary
  color #fff
  background-color $primary-color
  border-color $primary-color
  svg
    fill #fff
  &:hover,
  &:focus
    color #fff
    background darken($primary-color, 20%)
    border-color darken($primary-color, 20%)
  &.button--outline
    background-color transparent
    color $primary-color
    border 2px solid $primary-color
    svg
      fill $primary-color
    &:hover,
    &:focus
      color #fff
      background darken($primary-color, 20%)
      border-color darken($primary-color, 20%)
      svg
        fill #fff

.button--secondary
  color #fff
  background-color $secondary-color
  border-color $secondary-color
  svg
    fill #fff
  &:hover,
  &:focus
    color #fff
    background darken($secondary-color, 20%)
    border-color darken($secondary-color, 20%)
  &.button--outline
    background-color transparent
    color $secondary-color
    border 2px solid $secondary-color
    svg
      fill $secondary-color
    &:hover,
    &:focus
      color #fff
      background darken($secondary-color, 20%)
      border-color darken($secondary-color, 20%)
      svg
        fill #fff

.button-disabled
  cursor not-allowed
  color rgba($secondary-color, .4)
  border-color rgba($secondary-color, .2)
  svg
    fill rgba($secondary-color, .4)
  &:hover,
  &:focus
    color rgba($secondary-color, .6)
    border-color rgba($secondary-color, .4)
    svg
      fill rgba($secondary-color, .6)

.button--flex
  display flex
  align-items center
  justify-content center

.card
  @extend .clearfix
  background-color #fff
  position relative
  border-radius .625rem
  border 0 solid rgba(#000, .125)
  transition box-shadow .2s $timing-function,
    transform .2s $timing-function
  box-shadow 0 0 1px 0 rgba(#000, .08),
    0 4px 14px rgba(#000, .05)

.card--hover
  &:hover,
  &:focus
    box-shadow 0 0 0 4px $secondary-color
    transform translateY(-5px)

a.button
  box-shadow none
