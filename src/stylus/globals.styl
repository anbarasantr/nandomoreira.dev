.clearfix
  &:after
    content ""
    display table
    clear both

.button
  border none
  background $secondary-color
  font-size 1rem
  border-radius .25em
  padding 1rem 1.25rem
  color #fff
  font-weight 800
  cursor pointer
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  appearance none
  transition background-color .2s $timingFunction,
    border-color .2s $timingFunction
  svg
    fill inherit

  svg, span
    display inline-block
    margin 0 .25rem

  &:hover,
  &:focus,
  &:active
    outline none
    box-shadow none

.button--primary
  color #fff
  background-color $primary-color
  border-color $primary-color
  svg
    fill #fff
  &:hover,
  &:focus
    color #fff
    background darken($primary-color, 20%)
    border-color darken($primary-color, 20%)

.button--secondary
  color #fff
  background-color $secondary-color
  border-color $secondary-color
  svg
    fill #fff
  &:hover,
  &:focus
    color #fff
    background darken($secondary-color, 20%)
    border-color darken($secondary-color, 20%)

.buttonDisabled
  cursor not-allowed
  color rgba($secondary-color, .4)
  border-color rgba($secondary-color, .2)
  svg
    fill rgba($secondary-color, .4)
  &:hover,
  &:focus
    color rgba($secondary-color, .6)
    border-color rgba($secondary-color, .4)
    svg
      fill rgba($secondary-color, .6)

.button--flex
  display flex
  align-items center
  justify-content center

.card
  @extend .clearfix
  background-color #fff
  position relative
  border-radius .625rem
  border 0 solid rgba(#000, .125)
  // box-shadow 0 0 1.25rem rgba($secondary-color, .1)
  box-shadow 0 0 1px 0 rgba(59,89,178,.08), 0 4px 14px rgba(59,89,178,.06)
  transition box-shadow .2s $timingFunction,
    transform .2s $timingFunction
  &:hover,
  &:active,
  &:focus
    // box-shadow none
    box-shadow 0 0 0 4px $secondary-color
