$font-family-base = 'Lato', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif
$font-family-heading = 'Nunito', $font-family-base
$font-family-monospace = Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace

$font-size = 16px

$primary-color = #25ced1
$secondary-color = #4b5b6c
$tertiary-color = #ff8a5b
$quarternary-color = #fceade
$background-color = #f5f6f9
$background-dark-color = #323232
$text-color = #37322e
$link-color = darken($primary-color, 15%)
$link-hover-color = darken($secondary-color, 10%)

$timingFunction = cubic-bezier(0.565, 1.65, 0.765, 0.88)
// $timingFunction = ease-in-out

$mobile  = 480px
$tablet  = 768px
$desktop = 1024px
$desktop-lg = 1360px

$container-size = 75rem
$container-small-size = 60rem
