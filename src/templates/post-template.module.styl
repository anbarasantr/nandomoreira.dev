@import '../stylus/index.styl'

.PostSingle
  &__header
    padding-top: 7.5rem /* 120/16 */
    padding-bottom: 7.5rem /* 120/16 */
    margin-bottom: 3.75rem /* 60/16 */
    background-color: $secondary-color
    > div
      position: relative
      z-index: 2
    a
      color: rgba(#fff, .75)
      font-weight: 700
      border-bottom-color: rgba(#fff, .75)
    h1, p, small
      color: #fff
    p, small
      opacity 0.7
    h1
      margin-top: 0
      // text-transform: capitalize
      font-size: 1.875rem /* 30/16 */
      line-height: 2.5rem /* 40/16 */
      @media (min-width: 769px)
        font-size: 2.625rem /* 42/16 */
        line-height: 3.25rem /* 52/16 */
    &--image
      background-repeat: no-repeat
      background-position: 50%
      background-size: cover
      position: relative
      &:before
        content: ''
        display: block
        opacity: 0.85
        background-color: $secondary-color
        position: absolute
        width: 100%
        height: 100%
        top: 0
        right: 0
        bottom: 0
        left: 0
        z-index: 1
      .postSingle__title
        color: #fff
  &__category
    font-weight: 400
    font-size: 1.375rem /* 22/16 */
    text-transform: uppercase
    color: #fff
    margin: 0
    @media (min-width: 769px)
      font-size: 1.625rem /* 26/16 */
  &__meta
    display: flex
    align-items: center
    color: #fff
    ul
      list-style: none
      margin: 5px 0 0 0
      padding: 0
    li
      display: inline-block
      margin-right: .3125rem /* 5/16 */
      font-weight: 400
    .author-avatar
      margin: 0 .9375rem /* 15/16 */ 0 0
      a
        border: none
      img
        width: 6.25rem /* 100/16 */
