@import '../../stylus/index.styl'

.Project
  margin-bottom 3.75rem
  position relative
  width 100%

  p
    margin 0 0 .625rem

  &__inner
    &:hover,
    &:focus,
    &:active
      box-shadow none
    +above($tablet)
      display block

  &__header
    padding 0
    h1
      margin 0 0 .625rem
      font-size 1.75rem
      a
        text-decoration none

  &__image
    display block
    +above($tablet)
      display inline-block
      width 700px

  &__content
    padding 1.875rem
    width 100%
    @extend .card
    @extend .card--hover
    +above($tablet)
      width calc(100% - 560px)
      display flex
      align-items center
      z-index 3
      position absolute
      bottom 3.75rem
      right 0
    +below($tablet)
      border-radius 0

  &__description
    color rgba($text-color, .75)
    font-size 1rem

  &__view
    display flex
    align-items center
    color $primary-color
    svg
      padding 5px
      display inline-block
      fill $primary-color
      position relative
      animation slide1 1s ease-in-out infinite
      transform translate3d(0, 2px, 0)

@keyframes slide1
  0%,
  100%
    transform translate3d(0, 2px, 0)
  50%
    transform translate3d(10px, 2px, 0)
