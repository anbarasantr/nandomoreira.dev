@import '../../stylus/index.styl'

.InstagramFeed
  text-align center
  h4
    font-size 1.125rem
    margin-bottom .625rem
  &__photos
    align-items center
    justify-content center
    display flex
    flex-direction row
    flex-wrap wrap
    width 100%
    a
      display flex
      flex-direction column
      flex-basis 100%
      flex 1 calc(50% - 4px)
      img
        border-radius .625rem
        border 0 solid rgba(#000, .125)
        box-shadow 0 0 1px 0 rgba($primary-color, .08), 0 4px 14px rgba($primary-color, .06)
        padding 2px
        display block
        // max-width 150px
        transition opacity .2s ease-in-out
      &:hover,
      &:focus
        img
          opacity 0.5
      .igf-like,
      .igf-comment,
      .igf-caption
        display none
