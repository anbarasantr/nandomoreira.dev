@import '../../stylus/index.styl'

.Header
  padding: 0
  height 60vh
  display flex
  align-items center
  justify-content flex-start
  margin-bottom: 3.75rem /* 60/16 */
  background-color: $secondary-color
  background-size cover
  background-position 50% 0%
  overflow hidden
  position relative
  &:before
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    width 100%
    height 100%
    z-index 1
    content ''
    display block
    background-color $secondary-color
    opacity 0.85
  &__Inner
    position: relative
    z-index: 2
  p, small
    opacity 0.75
    color: #fff
    margin .9375rem 0 0
  a
    color: rgba(#fff, .75)
    font-weight: 700
    border-bottom-color: rgba(#fff, .75)
  &__Title
    margin: 0
    color: #fff
    font-size: 1.875rem /* 30/16 */
    line-height: 2.5rem /* 40/16 */
    @media (min-width: 769px)
      font-size: 2.625rem /* 42/16 */
      line-height: 3.25rem /* 52/16 */

.Content
  @extend .card
  padding 1.875rem
  &__body
    img
      display block
      overflow hidden
    figure
      margin 0
    iframe
      min-height 250px
      @media (min-width: 769px)
        min-height 500px
