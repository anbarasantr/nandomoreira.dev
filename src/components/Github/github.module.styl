@import '../../stylus/index.styl'

.list
  display grid
  // align-items center
  grid-template-columns 1fr 1fr 1fr
  // grid-template-rows 8fr
  gap 1.2rem 1.2rem

.repo
  width 100%
  height 100%
  overflow hidden
  &:hover,
  &:active,
  &:focus
    box-shadow none

.card
  padding 20px
  box-shadow rgba(0, 0, 0, 0.11) 0px 1px 6px 0px
  background-color #fff

.name
  font-size 1.25rem
  margin 0 0 .625rem

.description
  opacity .75
  font-size 1rem
  margin 0

.footer
  width 100%
  display flex
  align-items center
  justify-content space-between
  margin-top 15px
  padding-top 15px
  border-top 1px solid rgba(#000, .1)
  p
    margin 0
    font-size .875rem
  ul, p, li
    display flex
    align-items center
  ul
    list-style none
    padding 0
    margin 0
  svg, span
    display inline-block
  li
    font-size .875rem
    margin-right 10px
  svg
    width 20px
    height 20px
    margin-right 4px

