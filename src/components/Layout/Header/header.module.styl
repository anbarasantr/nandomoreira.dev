@import '~stylus/index.styl'

.card
  text-align left
  z-index 1000
  min-height 90px
  border-radius 0
  border-top .25rem solid $primary-color
  animation fadeInTop 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 450ms both
  border-radius 0
  position fixed
  width 100%
  z-index 1000
  top 0
  left 0
  margin 0
  +above($desktop)
    min-height 80px

.inner
  padding 1.875rem 0
  +above($desktop)
    padding .9375rem 0 1.25rem
    display flex
    align-items center
    justify-content space-between

.navRight
  display flex
  align-items center

@keyframes fadeIn
  0%
    opacity 0
  100%
    opacity 1
