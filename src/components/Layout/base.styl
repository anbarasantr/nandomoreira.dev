@import '../../stylus/index.styl'

html, body
  margin 0
  padding 0

html
  font-size 16px
  font-family sans-serif
  text-rendering optimizeLegibility
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  box-sizing border-box
  overflow-y scroll

*
  &,
  &:before,
  &:after
    box-sizing inherit

html,
body,
#___gatsby
  width 100%
  min-height 100vh

#___gatsby
  background-color $background-color
  border-top .25rem solid $primary-color
  > div
    display flex
    flex-direction column
    position relative
    z-index 2

body
  background-color $primary-color
  font-family $font-family-base
  color $text-color
  font-size 1rem
  font-weight 400
  word-wrap break-word
  font-kerning normal
  word-spacing .0625rem
  line-height 1.6
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -moz-font-feature-settings "kern", "liga", "clig", "calt"
  -ms-font-feature-settings "kern", "liga", "clig", "calt"
  -webkit-font-feature-settings "kern", "liga", "clig", "calt"
  font-feature-settings "kern", "liga", "clig", "calt"

h1, h2, h3, h4, h5, h6
  font-family $font-family-heading
  line-height 1.2
  color inherit

h1, h2, h3, h4, h5, h6, strong, b
  font-weight 800

h1, h2, h3, h4, h5, h6, p
  margin 1.875rem 0

button, input, select, textarea
  font-family inherit
  margin 0

img, embed, iframe, object, audio, video
  height auto
  max-width 100%

p
  font-size 1.25rem
  font-weight 400
  line-height 1.5
  color $text-color
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

a
  color $link-color
  border-bottom $link-color
  transition .2s color $timingFunction, .2s outline $timingFunction, .2s box-shadow $timingFunction
  text-decoration none
  &:hover,
  &:active,
  &:focus
    color $link-hover-color
    border-color $link-hover-color
    box-shadow inset 0 -0.75rem 0 rgba($link-hover-color, .15)
  &:active,
  &:focus
    outline-color $link-hover-color

h1
  font-size 2.125rem

h2
  font-size 2rem

h3
  font-size 1.875rem

h4
  font-size 1.625rem

h5
  font-size 1.375rem

h6
  font-size 1.125rem

iframe
  border 0

table
  border-collapse collapse
  border-spacing 0

td, th
  padding 0
  text-align left

svg:not(:root)
  overflow hidden

code, kbd, pre, samp
  font-family $font-family-monospace
  font-size 1rem
  color #efefef
  border-radius .1875rem
  font-size .875rem
  padding .1875rem .375rem
  background-color #2d2d2d

hr
  display block
  width 100%
  margin 1.875rem 0
  border none
  border-bottom .0625rem solid rgba(#000, .1)

blockquote
  padding 1.5625rem 0 1.5625rem 5.375rem
  margin 3.125rem 0
  display block
  position relative
  pointer-events none
  &:after
    content "''"
    font italic 18.75rem Arial, Serif, Georgia, serif
    color rgba(#000, 0.045)
    position absolute
    top -3.75rem
    left -1.875rem
    z-index 0

  small
    display block
    color lighten($text-color, 25%)
    &:before
      content ' ‚è§ '

  p
    font italic 1.65rem/1.5 $font-family-base
    color rgba($text-color, .65)
    margin 0
    position relative
    font-size 1.25rem
    z-index 1
    pointer-events all

ul
  padding-left 1.25rem
  li
    p
      margin 0
    ul
      margin-bottom 1.875rem
