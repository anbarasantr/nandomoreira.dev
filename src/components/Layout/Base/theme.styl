@import '~stylus/index.styl'

body
  &.theme-light
    background-color $background-color

  &.theme-dark
    background-color $background-dark-color
    color #fff

    .card,
    .listTags__tag,
    .socialIcons__link,
    .pagination a,
    .button
      box-shadow none

    .header,
    .whatsApp__message
      border-color #000

    .whatsApp__message:before
      border-top-color #000
    .whatsApp__message:after
      border-top-color darken($background-dark-color, 15%)

    .header,
    .footer,
    .button--primary,
    .whatsApp__link,
    .whatsApp__message,
    .nav__list
      background-color darken($background-dark-color, 25%)

    .nav__list
      +above($desktop-lg)
        background-color transparent

    .hero,
    .pageHeader,
    .pagination__link,
    .button--secondary
      background-color darken($background-dark-color, 15%)

    .pagination__link,
    .button--primary,
    .button--secondary,
    .donate-link,
    .nav .toggle-button
      color #fff
      border 2px solid rgba(#fff, .25)
      background-color darken($background-dark-color, 15%)
      &:hover,
      &:focus
        border-color rgba(#fff, .5)
        background-color rgba(#fff, .05)

    .card,
    .listTags__tag,
    .socialIcons__link
      background-color rgba($background-color, .1)

    .project .card,
    .card.form
      background-color lighten($background-dark-color, 10%)

    a
      color darken(#fff, 15%)
      border-color darken(#fff, 15%)
      &:hover,
      &:active,
      &:focus
        color rgba(#fff, .8)
      a:not([.pagination__link]),
      a:not([role="button"]),
      a.nav__link
        &:hover,
        &:active,
        &:focus
          border-color darken(#fff, 15%)
          box-shadow inset 0 -0.75rem 0 rgba(#fff, .2)

    p
      color darken(#fff, 5%)

    svg
      fill #fff !important
