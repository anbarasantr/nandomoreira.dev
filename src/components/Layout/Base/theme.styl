@import '~stylus/index.styl'

body
  &.theme-light
    background-color $background-color

  &.theme-dark
    &, .hero h1, .hero h1 strong
      color #fff

    .dark-switcher
      svg
        fill #eabf57 !important

    p, .brand a
      color darken(#fff, 5%)

    svg
      fill #fff

    blockquote:after
      color rgba(#fff, .1)

    a
      color lighten($link-color, 30%)
      border-color lighten($link-color, 30%)
      &:hover,
      &:active,
      &:focus
        color lighten($link-color, 10%)
        border-color lighten($link-color, 10%)
        svg
          fill lighten($link-color, 10%)
      a:not([.pagination__link]),
      a:not([role="button"]),
      a.nav__link
        &:hover,
        &:active,
        &:focus
          box-shadow inset 0 -0.75rem 0 rgba(#fff, .2)

    &, .hero
      background-color $background-dark-color

    .card,
    .listTags__tag,
    .socialIcons__link,
    .pagination a,
    .button
      box-shadow none

    .header,
    .whatsApp__message
      border-color #000

    .whatsApp__message:before
      border-top-color #000
    .whatsApp__message:after
      border-top-color darken($background-dark-color, 15%)

    .header,
    .footer,
    .button--primary,
    .whatsApp__link,
    .whatsApp__message,
    .nav__list
      background-color darken($background-dark-color, 25%)

    .nav__list
      +above($desktop-lg)
        background-color transparent

    .pageHeader,
    .pagination__link,
    .button--secondary
      background-color darken($background-dark-color, 15%)

    .pagination__link,
    .button--primary,
    .button--secondary,
    .donate-link,
    .nav .toggle-button
      color #fff
      border 2px solid rgba(#fff, .25)
      background-color darken($background-dark-color, 15%)
      &:hover,
      &:focus
        border-color rgba(#fff, .5)
        background-color rgba(#fff, .05)

    .card,
    .listTags__tag,
    .socialIcons__link
      background-color rgba($background-color, .1)

    .project .card,
    .card.form
      background-color lighten($background-dark-color, 10%)

    .form__input
      background rgba(#fff, .2)
      color #fff

    .singleHeader
      &:before
        background-color lighten(#000, 5%)

    .skill__item.card
      background-color darken(#fff, 15%)

    [data-tooltip]:hover:before
      background darken(#fff, 15%)
      color $text-color
    [data-tooltip]:hover:after
      border-top-color darken(#fff, 15%)
      color $text-color
