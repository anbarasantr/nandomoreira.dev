@import '~stylus/index.styl'

.gatsby-highlight
  border-radius 0.3em
  margin 0 0 1.875rem
  padding 0
  overflow auto
  position relative
  overflow hidden

  &-code-line
    background-color #feb
    display block
    margin-right -1em
    margin-left -1em
    padding-right 1em
    padding-left 0.75em
    border-left 0.25em solid #f99

  pre[class*="language-"],
  code[class*="language-"]
    padding 0

  pre[class*="language-"]
    overflow initial
    float left
    min-width 100%
    border-radius 0
    padding 1.25rem

    code[class*="language-"]
      font-size .875rem
      font-family $font-family-monospace
      color #b3b9c5
      direction ltr
      text-align left
      white-space pre
      word-spacing normal
      word-break normal
      line-height 1.6rem
      font-weight 400
      -moz-tab-size 2
      -o-tab-size 2
      tab-size 2
      -webkit-hyphens none
      -ms-hyphens none
      hyphens none
      border-radius 4px
      -webkit-font-smoothing subpixel-antialiased

  &[data-language="bash"],
  &[data-language="sh"]
    padding-top 30px
    &:before,
    &:after
      content ''
      position absolute
    &:after
      background-color #101010
      width 100%
      height 40px
      top 0
      right 0
      left 0
      z-index 2
    &:before
      top 16px
      left 18px
      width 11px
      height 11px
      z-index 3
      border-radius 50%
      background-color #ff5f56
      box-shadow 18px 0 0 0 #ffbd2e, 36px 0 0 0 #27c93f

.language-filename
  font-family inherit
  background #222
  padding .625rem 1.25rem
  font-size .875rem
  letter-spacing .03125rem
  display block
  color #fff
  font-weight 700
  border-top-left-radius 6px
  border-top-right-radius 6px
  margin-bottom -10px
  overflow hidden
  position relative
  z-index 1
