@import '~stylus/index.styl'

.footer
  background-color #fff
  border-top .0625rem solid rgba(#000, .05)
  padding .9375rem .9375rem 5rem
  text-align center
  border-radius 0
  +above($tablet)
    padding-bottom .9375rem
  strong, address, a
    font-weight 800
    opacity 0.5
  address
    display inline
    font-style normal
  span
    font-size .75rem
    opacity 0.75
    margin 0
    +above($tablet)
      font-size .875rem
  a
    border none
  img, svg
    display inline-block
    vertical-align middle
