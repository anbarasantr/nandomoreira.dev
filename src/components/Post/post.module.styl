@import '../../stylus/index.styl'

.Post
  padding 0 .9375rem
  margin-bottom 1.875rem
  width 100%
  &__iconRight
    display flex
    transition all .2s $timingFunction
  &__inner
    @extend .card
    @extend .card--hover
    padding 1.25rem 1.875rem
    margin-bottom 2.5rem
    color $secondary-color
    text-decoration none
    svg, span
      display inline-block
      vertical-align middle
      margin-right .3125rem
    &:hover,
    &:focus
      .Post__iconRight
        transform translate3d(.625rem, 0, 0)

  &__date,
  &__category
    display inline-block
    vertical-align middle
    font-size .875rem

  &__header
    h1
      margin 0 0 .625rem
      font-size 1.625rem
    small
      display flex
      align-items center
      justify-content space-between
      padding-bottom .625rem

  &__content
    p
      margin 0
      opacity 0.75

  &__footer
    display flex
    align-items center
    justify-content space-between
    padding .9375rem 0 0
    p
      font-size .875rem
      margin .9375rem 0 0
