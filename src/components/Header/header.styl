@import '../../stylus/index.styl'

.Header
  transform translate3d(0, 0, 0)
  transition transform .12s ease-in-out,
    background-color .12s ease-in-out

  .nav__link
    +above($tablet)
      color #fff
      &:hover,
      &:focus,
      &:active,
      &--active
        color #fff
        box-shadow inset 0 -0.75rem 0 rgba(#fff, .3)

  &.isFixed
    @extend .card
    position fixed
    border-radius 0

    .nav__link
      color $primary-color
      &:hover,
      &:focus,
      &:active,
      &--active
        color $secondary-color
        box-shadow inset 0 -0.75rem 0 rgba($link-hover-color, .15)

    .brand
      &,
      &__link,
      &__link:hover,
      &__link:focus
        color $secondary-color
      span
        color $primary-color

  &.toUp
    transform translate3d(0, 0, 0)

  &.toDown
    transform translate3d(0, -100%, 0)
