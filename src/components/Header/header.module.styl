@import '../../stylus/index.styl'

.header
  @extend .card
  text-align left
  z-index 1000
  border-radius 0
  border-top .25rem solid $primary-color
  animation fadeInTop 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 450ms both
  border-radius 0
  +above($tablet)
    position fixed
    width 100%
    z-index 1000
    top 0
    left 0
    margin 0

.inner
  padding 1.875rem .9375rem
  +above($tablet)
    padding .9375rem 1.875rem 1.25rem
    display flex
    align-items center
    justify-content space-between

@keyframes fadeIn
  0%
    opacity 0
  100%
    opacity 1
