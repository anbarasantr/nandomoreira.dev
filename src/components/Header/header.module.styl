@import '../../stylus/index.styl'

.Header
  @extend .card
  text-align center
  z-index 100
  border-radius 0
  +above($tablet)
    position fixed
    z-index 1000
    top 0
    left 0
    margin 0
  // &Fixed
  &__inner
    padding 10px 15px
    +above($tablet)
      padding 15px 30px
      display flex
      align-items center
      justify-content space-between
