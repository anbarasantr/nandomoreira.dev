@import '../../stylus/index.styl'

.Social
  list-style none
  padding 0
  margin .3125rem /* 5/16 */ 0

  &__item
    display inline-block
    vertical-align middle
    text-align center
    line-height 2.5rem
    margin 0 .625rem .9375rem

  &__link
    opacity .8
    background #fff
    border-radius 100%
    display flex
    align-items center
    justify-content center
    position relative
    text-align center
    width 2.25rem
    height 2.25rem
    box-shadow 0 0 .0625rem .4375rem rgba(#000, 0.01)
    padding .9375rem
    &, svg
      transition .2s transform $timingFunction,
        .2s opacity $timingFunction
      margin 0
      padding 0
    &:hover,
    &:focus
      transform scale(1.1)
      opacity 1
      background #d20068
      color #fff
      box-shadow 0 0 .0625rem .4375rem rgba(210, 0, 104, 0.15)
      svg
        fill #fff
    &:hover,
    &:focus,
    &:active
      outline none
