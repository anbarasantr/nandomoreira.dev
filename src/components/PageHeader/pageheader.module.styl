@import '../../stylus/index.styl'

.PageHeader
  padding 0
  margin-bottom 2.5rem
  +above($tablet)
    padding 60px 0 30px
  &__title
    font-size 2rem
    margin 0 0 2.5rem
    color $secondary-color
    +above($tablet)
      font-size 3.25rem
  &__description
    p
      margin 0
      font-size 1.125rem
      +above($tablet)
        font-size 1.5rem
    h2
      margin 2.5rem 0
      font-size 2.375rem
      a
        text-decoration none
