@import '~stylus/index.styl'

.header
  padding 3.75rem 0
  margin-bottom 1.875rem
  background-color $secondary-color
  background-size cover
  background-position 50% 0%
  overflow hidden
  position relative
  &:before
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    width 100%
    height 100%
    z-index 1
    content ''
    display block
    background-color darken($secondary-color, 15%)
    opacity 0.85
  +above($tablet)
    padding 0
    margin-bottom 3.75rem /* 60/16 */
    height 60vh
    display flex
    align-items center
    justify-content flex-start

  .inner
    position relative
    z-index 2
    p, small
      opacity 0.75
      color #fff
      margin .9375rem 0 0
      animation fadeInBottom 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 750ms both
      display block
    a
      color rgba(#fff, .75)
      font-weight 700
      border-bottom-color rgba(#fff, .75)

.title
  margin 0
  color #fff
  font-size 1.875rem /* 30/16 */
  line-height 2.5rem /* 40/16 */
  animation fadeInBottom 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 500ms both
  @media (min-width 769px)
    font-size 2.625rem /* 42/16 */
    line-height 3.25rem /* 52/16 */

.category
  opacity 0.75
  font-size 1rem
  text-transform uppercase
  font-weight 400
  margin 0 0 .625rem
  line-height 1
  animation fadeInBottom 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 250ms both
  &, &:hover, &:focus
    color #fff
  a
    border-bottom 1px solid #fff
  +above($tablet)
    font-size 1.25rem

.small
  max-width $container-small-size
  animation fadeInBottom 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 1000ms both

.content
  padding 1.875rem
  &__body
    img
      display block
      overflow hidden
    figure
      margin 0
    iframe
      min-height 15.625rem
      @media (min-width 769px)
        min-height 31.25rem

@keyframes fadeInBottom
  0%
    transform translateY(50px)
    opacity 0
  100%
    transform translateY(0)
    opacity 1
