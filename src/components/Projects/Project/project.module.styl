@import '~stylus/index.styl'

.project
  margin-bottom 3.75rem
  position relative
  display block
  width 100%
  +above($tablet)
    &.left
      .inner
        flex-direction row
        .image
          border-top-right-radius .625rem
          border-bottom-right-radius .625rem
    &.right
      .inner
        flex-direction row-reverse
        .image
          border-top-left-radius .625rem
          border-bottom-left-radius .625rem
  p
    margin 0 0 .625rem

.inner
  width 100%
  display flex
  align-items center
  animation fadeInBottom 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) 250ms both
  justify-content center
  +below($tablet)
    flex-direction column

.header
  padding 0
  h1
    margin 0 0 .625rem
    font-size 1.75rem
    a
      text-decoration none
    +above($tablet)
      font-size 2rem

.image
  display block
  width 100%
  overflow hidden
  +above($tablet)
    // width 75%
    display inline-block
  +below($tablet)
    border-radius 0 0 .625rem .625rem

.content
  width 100%
  padding 1.875rem
  +above($tablet)
    display block
    width 75%

.description
  color rgba($text-color, .75)
  font-size 1rem
  +above($tablet)
    line-height 1.4
    font-size 1.125rem

.view
  display flex
  align-items center
  color $primary-color
  svg
    padding .3125rem
    display inline-block
    fill $primary-color
    position relative
    animation animateArrow 1s ease-in-out infinite
    transform translate3d(0, .125rem, 0)

@keyframes animateArrow
  0%,
  100%
    transform translate3d(0, .125rem, 0)
  50%
    transform translate3d(.625rem, .125rem, 0)

@keyframes fadeInBottom
  0%
    transform translateY(50px)
    opacity 0
  100%
    transform translateY(0)
    opacity 1

@keyframes fadeInBottomContent
  0%
    transform translateY(0)
    opacity 0
  100%
    transform translateY(-50%)
    opacity 1
